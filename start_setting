def main_menu():
    print_ascii_banner()
    print(f"{COLOR_YELLOW}Главное меню:{COLOR_RESET}")
    print("1. 🔧 Системные утилиты")
    print("2. 🌐 Веб-безопасность")
    print("3. 🔐 Восстановление паролей")
    print("4. 📚 Словари и базы данных")
    print("5. 🛠 Дополнительные инструменты")
    print("6. ❌ Выйти")
    while True:
        choice = input("Выберите категорию (1-6): ").strip()
        if choice in ["1", "2", "3", "4", "5", "6"]:
            return choice
        else:
            warning("Неверный выбор! Введите 1, 2, 3, 4, 5 или 6.")

if __name__ == "__main__":
    # Проверка операционной системы
    if not is_linux():
        error("Этот скрипт предназначен для Kali Linux.")
        error("Запустите его в Linux-окружении (например, в Docker-контейнере).")
        error("Для тестирования в Windows используйте: docker run -it --rm -v ${PWD}:/workspace kalilinux/kali-rolling")
        sys.exit(1)
    
    if not is_root():
        error("Скрипт должен быть запущен от root. Используйте: sudo python3 start_setting")
        sys.exit(1)

    # Главный цикл программы
    while True:
        main_choice = main_menu()
        
        if main_choice == "1":  # Системные утилиты
            while True:
                sub_choice = system_utilities_menu()
                if sub_choice == "1":
                    system_update_only()
                elif sub_choice == "2":
                    # Полная установка
                    apt_update_upgrade()
                    check_or_install_package('seclists', 'seclists')
                    check_and_extract_rockyou()
                    check_or_install_wpscan()
                    check_or_install_burpsuite()
                    check_or_install_pre2k()
                elif sub_choice == "3":
                    additional_packages_manual_menu()
                elif sub_choice == "4":
                    break  # Назад в главное меню
                
        elif main_choice == "2":  # Веб-безопасность
            while True:
                sub_choice = web_security_menu()
                if sub_choice == "1":
                    check_or_install_burpsuite()
                elif sub_choice == "2":
                    check_or_install_wpscan()
                elif sub_choice == "3":
                    break  # Назад в главное меню
                    
        elif main_choice == "3":  # Восстановление паролей
            while True:
                sub_choice = password_recovery_menu()
                if sub_choice == "1":
                    check_or_install_pre2k()
                elif sub_choice == "2":
                    install_john()
                elif sub_choice == "3":
                    install_hashcat()
                elif sub_choice == "4":
                    break  # Назад в главное меню
                    
        elif main_choice == "4":  # Словари и базы данных
            while True:
                sub_choice = dictionaries_menu()
                if sub_choice == "1":
                    check_or_install_package('seclists', 'seclists')
                elif sub_choice == "2":
                    check_and_extract_rockyou()
                elif sub_choice == "3":
                    install_seclists_and_rockyou()
                elif sub_choice == "4":
                    break  # Назад в главное меню
                    
        elif main_choice == "5":  # Дополнительные инструменты
            while True:
                sub_choice = additional_tools_menu()
                if sub_choice == "1":
                    install_nmap()
                elif sub_choice == "2":
                    install_metasploit()
                elif sub_choice == "3":
                    install_nikto()
                elif sub_choice == "4":
                    install_gobuster()
                elif sub_choice == "5":
                    install_hydra()
                elif sub_choice == "6":
                    break  # Назад в главное меню
                    
        elif main_choice == "6":  # Выход
            print("Выход.")
            sys.exit(0)
        
        # После выполнения действия возвращаемся в главное меню
        print(f"\n{COLOR_YELLOW}Нажмите Enter для возврата в главное меню...{COLOR_RESET}")
        try:
            input()
        except (EOFError, KeyboardInterrupt):
            print("\nВыход из программы.")
            sys.exit(0)
