#!/usr/bin/env python3
import os
import subprocess
import sys
import platform

# ĞšĞ¾Ğ½Ñ„Ğ¸Ğ³ÑƒÑ€Ğ°Ñ†Ğ¸Ñ
BURP_VERSION = "2023.12.1"  # Ğ’ĞµÑ€ÑĞ¸Ñ Burp Suite (Ğ¼Ğ¾Ğ¶Ğ½Ğ¾ Ğ¸Ğ·Ğ¼ĞµĞ½Ğ¸Ñ‚ÑŒ)
REQUIRED_DISK_SPACE_MB = 200  # Ğ¢Ñ€ĞµĞ±ÑƒĞµĞ¼Ğ¾Ğµ ÑĞ²Ğ¾Ğ±Ğ¾Ğ´Ğ½Ğ¾Ğµ Ğ¼ĞµÑÑ‚Ğ¾ Ğ² MB

# Ğ¦Ğ²ĞµÑ‚Ğ° ANSI Ğ´Ğ»Ñ Ğ²Ñ‹Ğ²Ğ¾Ğ´Ğ° ÑĞ¾Ğ¾Ğ±Ñ‰ĞµĞ½Ğ¸Ğ¹
COLOR_GREEN = "\033[92m"
COLOR_RED = "\033[91m"
COLOR_YELLOW = "\033[93m"
COLOR_RESET = "\033[0m"

def print_ascii_banner():
    banner = f"""{COLOR_YELLOW}


â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—         â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•—
â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•‘         â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—    â•šâ•â•â–ˆâ–ˆâ•”â•â•â•â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘
â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘         â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘       â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘
â•šâ•â•â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘         â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘       â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘
â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—    â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•       â–ˆâ–ˆâ•‘   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘
â•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•â•    â•šâ•â•  â•šâ•â•â•šâ•â•â•â•â•â•â•â•šâ•â•â•â•â•â•        â•šâ•â•   â•šâ•â•â•â•â•â•â•â•šâ•â•  â•šâ•â•â•šâ•â•     â•šâ•â•
                                                                                  
{COLOR_RESET}"""
    print(banner)

def success(msg):
    print(f"{COLOR_GREEN}{msg}{COLOR_RESET}")

def error(msg):
    print(f"{COLOR_RED}{msg}{COLOR_RESET}")

def warning(msg):
    print(f"{COLOR_YELLOW}{msg}{COLOR_RESET}")

def is_linux():
    """ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑĞµÑ‚, Ñ‡Ñ‚Ğ¾ ÑĞºÑ€Ğ¸Ğ¿Ñ‚ Ğ·Ğ°Ğ¿ÑƒÑ‰ĞµĞ½ Ğ² Linux"""
    return platform.system() == "Linux"

def is_root():
    """ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑĞµÑ‚ Ğ¿Ñ€Ğ°Ğ²Ğ° root Ğ² Linux"""
    if not is_linux():
        return False
    try:
        return os.getuid() == 0
    except AttributeError:
        # Fallback Ğ´Ğ»Ñ ÑĞ¸ÑÑ‚ĞµĞ¼ Ğ±ĞµĞ· getuid
        return False

def ensure_directory_exists(path):
    """Ğ¡Ğ¾Ğ·Ğ´Ğ°ĞµÑ‚ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ, ĞµÑĞ»Ğ¸ Ğ¾Ğ½Ğ° Ğ½Ğµ ÑÑƒÑ‰ĞµÑÑ‚Ğ²ÑƒĞµÑ‚"""
    if not os.path.exists(path):
        try:
            os.makedirs(path, exist_ok=True)
            print(f"Ğ¡Ğ¾Ğ·Ğ´Ğ°Ğ½Ğ° Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ: {path}")
        except OSError as e:
            error(f"ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ {path}: {e}")
            return False
    return True

def check_disk_space(required_mb=REQUIRED_DISK_SPACE_MB):
    """ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑĞµÑ‚ ÑĞ²Ğ¾Ğ±Ğ¾Ğ´Ğ½Ğ¾Ğµ Ğ¼ĞµÑÑ‚Ğ¾ Ğ½Ğ° Ğ´Ğ¸ÑĞºĞµ"""
    try:
        statvfs = os.statvfs('/')
        free_space_mb = (statvfs.f_frsize * statvfs.f_bavail) / (1024 * 1024)
        if free_space_mb < required_mb:
            warning(f"ĞœĞ°Ğ»Ğ¾ ÑĞ²Ğ¾Ğ±Ğ¾Ğ´Ğ½Ğ¾Ğ³Ğ¾ Ğ¼ĞµÑÑ‚Ğ°: {free_space_mb:.1f}MB. Ğ¢Ñ€ĞµĞ±ÑƒĞµÑ‚ÑÑ: {required_mb}MB")
            return False
        return True
    except OSError as e:
        warning(f"ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€Ğ¸Ñ‚ÑŒ ÑĞ²Ğ¾Ğ±Ğ¾Ğ´Ğ½Ğ¾Ğµ Ğ¼ĞµÑÑ‚Ğ¾: {e}")
        return True  # ĞŸÑ€Ğ¾Ğ´Ğ¾Ğ»Ğ¶Ğ°ĞµĞ¼ Ğ²Ñ‹Ğ¿Ğ¾Ğ»Ğ½ĞµĞ½Ğ¸Ğµ, ĞµÑĞ»Ğ¸ Ğ½Ğµ Ğ¼Ğ¾Ğ¶ĞµĞ¼ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€Ğ¸Ñ‚ÑŒ

def check_wget():
    """ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑĞµÑ‚ Ğ½Ğ°Ğ»Ğ¸Ñ‡Ğ¸Ğµ wget Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ°Ğ²Ğ»Ğ¸Ğ²Ğ°ĞµÑ‚ Ğ¿Ñ€Ğ¸ Ğ½ĞµĞ¾Ğ±Ñ…Ğ¾Ğ´Ğ¸Ğ¼Ğ¾ÑÑ‚Ğ¸"""
    result = subprocess.run(['which', 'wget'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if result.returncode != 0:
        print("wget Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
        try:
            subprocess.run(['apt', 'install', '-y', 'wget'], check=True, 
                         stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
            success("wget ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ wget.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(stderr_out)
            return False
    return True

def apt_update_upgrade():
    if ask_update():
        try:
            print("ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ ÑĞ¿Ğ¸ÑĞºĞ° Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸ĞµĞ² (apt update)...")
            subprocess.run(['apt', 'update', '-y'], check=True, stdout=subprocess.DEVNULL, stderr=subprocess.DEVNULL)
            print("ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ¿Ğ°ĞºĞµÑ‚Ğ¾Ğ² (apt upgrade)...")
            subprocess.run(['apt', 'upgrade', '-y'], check=True, stdout=subprocess.DEVNULL, stderr=subprocess.DEVNULL)
            success("ĞŸĞ°ĞºĞµÑ‚Ñ‹ ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ñ‹.")
        except KeyboardInterrupt:
            print(f"\n{COLOR_YELLOW}ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ¿Ğ°ĞºĞµÑ‚Ğ¾Ğ² Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ¾ Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
            return False
        except subprocess.CalledProcessError:
            error("Ğ’Ğ¾Ğ·Ğ½Ğ¸ĞºĞ»Ğ° Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğ¸ Ğ¿Ğ°ĞºĞµÑ‚Ğ¾Ğ².")
            return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
    else:
        print("ĞŸÑ€Ğ¾Ğ¿ÑƒÑĞº Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ñ Ğ¿Ğ°ĞºĞµÑ‚Ğ¾Ğ².")

def check_or_install_package(pkgname, desc):
    print(f"ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ°, ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½ Ğ»Ğ¸ Ğ¿Ğ°ĞºĞµÑ‚ {desc}...")
    try:
        result = subprocess.run(['dpkg', '-s', pkgname], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
        if result.returncode == 0:
            success(f"ĞŸĞ°ĞºĞµÑ‚ {desc} ÑƒĞ¶Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        else:
            print(f"{desc} Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
            try:
                proc = subprocess.run(
                    ['apt', 'install', '-y', pkgname],
                    check=True,
                    stdout=subprocess.DEVNULL,
                    stderr=subprocess.PIPE
                )
                success(f"ĞŸĞ°ĞºĞµÑ‚ {desc} ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
            except KeyboardInterrupt:
                print(f"\n{COLOR_YELLOW}Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° Ğ¿Ğ°ĞºĞµÑ‚Ğ° {desc} Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
                return False
            except subprocess.CalledProcessError as e:
                error(f"ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ Ğ¿Ğ°ĞºĞµÑ‚Ğ° {desc}.")
                stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
                warning(stderr_out)
                return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
    except KeyboardInterrupt:
        print(f"\n{COLOR_YELLOW}ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ¿Ğ°ĞºĞµÑ‚Ğ° {desc} Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
        return False
    except FileNotFoundError:
        error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° dpkg Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£Ğ±ĞµĞ´Ğ¸Ñ‚ĞµÑÑŒ, Ñ‡Ñ‚Ğ¾ Ğ²Ñ‹ Ğ² Linux-Ğ¾ĞºÑ€ÑƒĞ¶ĞµĞ½Ğ¸Ğ¸.")
        return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
    except Exception as e:
        error(f"ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¿Ñ€Ğ¾Ğ²ĞµÑ€ĞºĞµ Ğ¿Ğ°ĞºĞµÑ‚Ğ° {desc}: {e}")
        return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹

def check_and_extract_rockyou():
    """ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ¸ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞ° ÑĞ»Ğ¾Ğ²Ğ°Ñ€Ñ rockyou"""
    rockyou_txt = "/usr/share/wordlists/rockyou.txt"
    rockyou_gz = "/usr/share/wordlists/rockyou.txt.gz"
    rockyou_tar_gz = "/usr/share/wordlists/rockyou.tar.gz"

    # Ensure wordlists directory exists
    if not ensure_directory_exists('/usr/share/wordlists'):
        error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ /usr/share/wordlists")
        return False

    if os.path.isfile(rockyou_txt):
        success("Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€ÑŒ rockyou Ğ³Ğ¾Ñ‚Ğ¾Ğ² Ğº Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ.")
        return True

    if os.path.isfile(rockyou_gz):
        print("Ğ¤Ğ°Ğ¹Ğ» rockyou.txt Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½, Ğ½Ğ¾ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½ Ğ°Ñ€Ñ…Ğ¸Ğ² rockyou.txt.gz. Ğ Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ñ‹Ğ²Ğ°ĞµĞ¼...")
        try:
            subprocess.run(['gunzip', '-kf', rockyou_gz], check=True)
            if os.path.isfile(rockyou_txt):
                success("Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€ÑŒ rockyou ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ğ½ Ğ¸ Ğ³Ğ¾Ñ‚Ğ¾Ğ² Ğº Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ.")
                return True
            else:
                error("ĞÑˆĞ¸Ğ±ĞºĞ°: Ğ½Ğµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ñ‚ÑŒ rockyou.txt.gz.")
                return False
        except KeyboardInterrupt:
            print(f"\n{COLOR_YELLOW}Ğ Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞ° rockyou.txt.gz Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
            return False
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞµ rockyou.txt.gz.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
            return False
        except FileNotFoundError:
            error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° gunzip Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚Ğµ gzip.")
            return False

    if os.path.isfile(rockyou_tar_gz):
        print("Ğ¤Ğ°Ğ¹Ğ» rockyou.txt Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½, Ğ½Ğ¾ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½ Ğ°Ñ€Ñ…Ğ¸Ğ² rockyou.tar.gz. Ğ Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ñ‹Ğ²Ğ°ĞµĞ¼...")
        try:
            subprocess.run(['tar', 'xfz', rockyou_tar_gz, '-C', '/usr/share/wordlists/'], check=True)
            if os.path.isfile(rockyou_txt):
                success("Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€ÑŒ rockyou ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ğ½ Ğ¸ Ğ³Ğ¾Ñ‚Ğ¾Ğ² Ğº Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ.")
                return True
            else:
                error("ĞÑˆĞ¸Ğ±ĞºĞ°: Ğ½Ğµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ñ‚ÑŒ rockyou.tar.gz.")
                return False
        except KeyboardInterrupt:
            print(f"\n{COLOR_YELLOW}Ğ Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞ° rockyou.tar.gz Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
            return False
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞµ rockyou.tar.gz.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
            return False
        except FileNotFoundError:
            error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° tar Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚Ğµ tar.")
            return False

    warning("Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€ÑŒ rockyou.txt Ğ¸ Ğ°Ñ€Ñ…Ğ¸Ğ²Ñ‹ Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ñ‹. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚Ğµ Ğ¿Ğ°ĞºĞµÑ‚ seclists, ĞµÑĞ»Ğ¸ ĞµÑ‰Ñ‘ Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
    return False

def check_or_install_wpscan():
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ°, ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½ Ğ»Ğ¸ WPScan...")
    try:
        result = subprocess.run(['dpkg', '-s', 'wpscan'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
        if result.returncode == 0:
            success("ĞŸĞ°ĞºĞµÑ‚ WPScan ÑƒĞ¶Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        else:
            print("WPScan Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
            try:
                proc = subprocess.run(
                    ['apt', 'install', '-y', 'wpscan'],
                    check=True,
                    stdout=subprocess.DEVNULL,
                    stderr=subprocess.PIPE
                )
                success("ĞŸĞ°ĞºĞµÑ‚ WPScan ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
            except KeyboardInterrupt:
                print(f"\n{COLOR_YELLOW}Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° WPScan Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
                return False
            except subprocess.CalledProcessError as e:
                error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ Ğ¿Ğ°ĞºĞµÑ‚Ğ° WPScan.")
                stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
                warning(stderr_out)
                return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
        update_wpscan_db()
    except KeyboardInterrupt:
        print(f"\n{COLOR_YELLOW}Ğ Ğ°Ğ±Ğ¾Ñ‚Ğ° Ñ WPScan Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
        return False
    except FileNotFoundError:
        error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° dpkg Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£Ğ±ĞµĞ´Ğ¸Ñ‚ĞµÑÑŒ, Ñ‡Ñ‚Ğ¾ Ğ²Ñ‹ Ğ² Linux-Ğ¾ĞºÑ€ÑƒĞ¶ĞµĞ½Ğ¸Ğ¸.")
        return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
    except Exception as e:
        error(f"ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ñ€Ğ°Ğ±Ğ¾Ñ‚Ğµ Ñ WPScan: {e}")
        return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹

def update_wpscan_db():
    print("Ğ—Ğ°Ğ¿ÑƒÑĞº Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ñ Ğ±Ğ°Ğ·Ñ‹ WPScan...")
    try:
        proc = subprocess.run(['wpscan', '--update'], check=True, stdout=subprocess.PIPE, stderr=subprocess.PIPE)
        success("Ğ‘Ğ°Ğ·Ğ° ÑƒÑĞ·Ğ²Ğ¸Ğ¼Ğ¾ÑÑ‚ĞµĞ¹ WPScan ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ°.")
    except KeyboardInterrupt:
        print(f"\n{COLOR_YELLOW}ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ±Ğ°Ğ·Ñ‹ WPScan Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ¾ Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
    except subprocess.CalledProcessError as e:
        error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğ¸ Ğ±Ğ°Ğ·Ñ‹ WPScan.")
        stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
        warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
    except FileNotFoundError:
        error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° wpscan Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£Ğ±ĞµĞ´Ğ¸Ñ‚ĞµÑÑŒ, Ñ‡Ñ‚Ğ¾ WPScan ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
    except Exception as e:
        error(f"ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğ¸ WPScan: {e}")

def check_or_install_burpsuite():
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ°, ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½ Ğ»Ğ¸ Burp Suite Community...")
    
    # Check if burpsuite is already installed
    result = subprocess.run(['which', 'burpsuite'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if result.returncode == 0:
        success("Burp Suite Community ÑƒĞ¶Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        return  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ÑÑ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
    
    # Check disk space before downloading
    if not check_disk_space():
        warning("ĞŸÑ€Ğ¾Ğ´Ğ¾Ğ»Ğ¶Ğ°ĞµĞ¼ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºÑƒ, Ğ½Ğ¾ Ğ¼Ğ¾Ğ¶ĞµÑ‚ Ğ½Ğµ Ñ…Ğ²Ğ°Ñ‚Ğ¸Ñ‚ÑŒ Ğ¼ĞµÑÑ‚Ğ°...")
    
    # Check if wget is available
    if not check_wget():
        error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ wget. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° Burp Suite Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ°.")
        return
    
    # Check if Java is installed (required for Burp Suite)
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Java...")
    java_result = subprocess.run(['java', '-version'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if java_result.returncode != 0:
        print("Java Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° OpenJDK...")
        try:
            subprocess.run(['apt', 'install', '-y', 'openjdk-11-jdk'], check=True, 
                         stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
            success("OpenJDK 11 ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ Java.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(stderr_out)
            return
        except FileNotFoundError:
            error("ĞšĞ¾Ğ¼Ğ°Ğ½Ğ´Ğ° apt Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½Ğ°. Ğ£Ğ±ĞµĞ´Ğ¸Ñ‚ĞµÑÑŒ, Ñ‡Ñ‚Ğ¾ Ğ²Ñ‹ Ğ² Linux-Ğ¾ĞºÑ€ÑƒĞ¶ĞµĞ½Ğ¸Ğ¸.")
            return
    
    # Download and install Burp Suite Community
    print("Ğ—Ğ°Ğ³Ñ€ÑƒĞ·ĞºĞ° Burp Suite Community Edition...")
    burp_url = f"https://portswigger.net/burp/releases/download?product=community&version={BURP_VERSION}&type=jar"
    burp_jar = "/opt/burpsuite-community.jar"
    
    try:
        # Ensure directories exist
        if not ensure_directory_exists('/opt'):
            error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ /opt")
            return
        
        if not ensure_directory_exists('/usr/share/applications'):
            error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ /usr/share/applications")
            return
        
        if not ensure_directory_exists('/usr/local/bin'):
            error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ /usr/local/bin")
            return
        
        # Download Burp Suite
        print("Ğ—Ğ°Ğ³Ñ€ÑƒĞ¶Ğ°ĞµĞ¼ Burp Suite (ÑÑ‚Ğ¾ Ğ¼Ğ¾Ğ¶ĞµÑ‚ Ğ·Ğ°Ğ½ÑÑ‚ÑŒ Ğ½ĞµĞºĞ¾Ñ‚Ğ¾Ñ€Ğ¾Ğµ Ğ²Ñ€ĞµĞ¼Ñ)...")
        subprocess.run(['wget', '-O', burp_jar, burp_url], check=True, 
                      stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
        success("Burp Suite Community ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ğ·Ğ°Ğ³Ñ€ÑƒĞ¶ĞµĞ½.")
        
        # Create desktop entry
        desktop_entry = f"""[Desktop Entry]
Version=1.0
Type=Application
Name=Burp Suite Community
Comment=Web Application Security Testing Platform
Exec=java -jar {burp_jar}
Icon=burpsuite
Terminal=false
Categories=Network;Security;
"""
        
        with open('/usr/share/applications/burpsuite.desktop', 'w') as f:
            f.write(desktop_entry)
        
        # Create launcher script
        launcher_script = f"""#!/bin/bash
java -jar {burp_jar} "$@"
"""
        
        with open('/usr/local/bin/burpsuite', 'w') as f:
            f.write(launcher_script)
        
        subprocess.run(['chmod', '+x', '/usr/local/bin/burpsuite'], check=True)
        subprocess.run(['chmod', '+x', burp_jar], check=True)
        
        success("Burp Suite Community ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½!")
        success("Ğ—Ğ°Ğ¿ÑƒÑĞº: burpsuite Ğ¸Ğ»Ğ¸ Ñ‡ĞµÑ€ĞµĞ· Ğ¼ĞµĞ½Ñ Ğ¿Ñ€Ğ¸Ğ»Ğ¾Ğ¶ĞµĞ½Ğ¸Ğ¹")
        
    except KeyboardInterrupt:
        print(f"\n{COLOR_YELLOW}Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° Burp Suite Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
    except subprocess.CalledProcessError as e:
        error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ Burp Suite Community.")
        stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
        warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
        if "404" in stderr_out:
            warning("Ğ’Ğ¾Ğ·Ğ¼Ğ¾Ğ¶Ğ½Ğ¾, Ğ²ĞµÑ€ÑĞ¸Ñ Burp Suite ÑƒÑÑ‚Ğ°Ñ€ĞµĞ»Ğ°. ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑŒÑ‚Ğµ Ğ°ĞºÑ‚ÑƒĞ°Ğ»ÑŒĞ½ÑƒÑ Ğ²ĞµÑ€ÑĞ¸Ñ Ğ½Ğ° ÑĞ°Ğ¹Ñ‚Ğµ.")
    except FileNotFoundError as e:
        error(f"Ğ¤Ğ°Ğ¹Ğ» Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½: {e}")
    except PermissionError as e:
        error(f"ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ°Ğ² Ğ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ°: {e}")
    except OSError as e:
        error(f"ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¾Ğ¿ĞµÑ€Ğ°Ñ†Ğ¸Ğ¾Ğ½Ğ½Ğ¾Ğ¹ ÑĞ¸ÑÑ‚ĞµĞ¼Ñ‹: {e}")
    except Exception as e:
        error(f"ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ Burp Suite: {e}")
        warning("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ÑŒÑ‚Ğµ Ğ»Ğ¾Ğ³Ğ¸ Ğ´Ğ»Ñ Ğ¿Ğ¾Ğ»ÑƒÑ‡ĞµĞ½Ğ¸Ñ Ğ´Ğ¾Ğ¿Ğ¾Ğ»Ğ½Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ğ¾Ğ¹ Ğ¸Ğ½Ñ„Ğ¾Ñ€Ğ¼Ğ°Ñ†Ğ¸Ğ¸.")

def ask_update():
    prompt = f"{COLOR_YELLOW}ĞĞ±Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ Ğ¿Ğ°ĞºĞµÑ‚Ñ‹? [y/n]: {COLOR_RESET}"
    while True:
        try:
            answer = input(prompt).strip().lower()
        except EOFError:
            error("Ğ’Ğ²Ğ¾Ğ´ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿ĞµĞ½! Ğ—Ğ°Ğ¿ÑƒÑÑ‚Ğ¸Ñ‚Ğµ ÑĞºÑ€Ğ¸Ğ¿Ñ‚ Ğ² Ğ¸Ğ½Ñ‚ĞµÑ€Ğ°ĞºÑ‚Ğ¸Ğ²Ğ½Ğ¾Ğ¼ Ñ€ĞµĞ¶Ğ¸Ğ¼Ğµ Ğ¸Ğ·-Ğ¿Ğ¾Ğ´ root Ğ¸Ğ»Ğ¸ Ñ sudo.")
            return False  # Ğ’Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ False Ğ²Ğ¼ĞµÑÑ‚Ğ¾ Ğ²Ñ‹Ñ…Ğ¾Ğ´Ğ° Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
        if answer in ['y', 'yes', 'Ğ´', 'Ğ´Ğ°']:
            return True
        elif answer in ['n', 'no', 'Ğ½', 'Ğ½ĞµÑ‚']:
            return False
        else:
            print("ĞÑ‚Ğ²ĞµÑ‚ Ğ½Ğµ Ñ€Ğ°ÑĞ¿Ğ¾Ğ·Ğ½Ğ°Ğ½. ĞŸĞ¾Ğ¶Ğ°Ğ»ÑƒĞ¹ÑÑ‚Ğ°, Ğ²Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ y/Ğ´/yes/Ğ´Ğ° Ğ¸Ğ»Ğ¸ n/Ğ½/no/Ğ½ĞµÑ‚.")

def check_or_install_pre2k():
    """Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° pre2k - Ğ¸Ğ½ÑÑ‚Ñ€ÑƒĞ¼ĞµĞ½Ñ‚Ğ° Ğ´Ğ»Ñ Ğ²Ğ¾ÑÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ñ Ğ¿Ğ°Ñ€Ğ¾Ğ»ĞµĞ¹"""
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ°, ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½ Ğ»Ğ¸ pre2k...")
    
    # Check if pre2k is already installed
    result = subprocess.run(['which', 'pre2k'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if result.returncode == 0:
        success("pre2k ÑƒĞ¶Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        return True
    
    print("pre2k Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½. ĞŸĞ¾Ğ¿Ñ‹Ñ‚ĞºĞ° ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ¸...")
    
    # First, try to install from apt repositories
    print("ĞŸĞ¾Ğ¿Ñ‹Ñ‚ĞºĞ° ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ¸ pre2k Ğ¸Ğ· Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸ĞµĞ²...")
    try:
        subprocess.run(['apt', 'install', '-y', 'pre2k'], check=True, 
                     stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
        success("pre2k ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½ Ğ¸Ğ· Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸ĞµĞ²!")
        return True
    except subprocess.CalledProcessError:
        print("pre2k Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½ Ğ² Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸ÑÑ…. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° Ğ¸Ğ· Ğ¸ÑÑ…Ğ¾Ğ´Ğ½Ğ¾Ğ³Ğ¾ ĞºĞ¾Ğ´Ğ°...")
    
    # If apt installation failed, try building from source
    
    # Check if git is available
    git_result = subprocess.run(['which', 'git'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if git_result.returncode != 0:
        print("git Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
        try:
            subprocess.run(['apt', 'install', '-y', 'git'], check=True, 
                         stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
            success("git ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ git.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
            return False
    
    # Check if make is available
    make_result = subprocess.run(['which', 'make'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if make_result.returncode != 0:
        print("make Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
        try:
            subprocess.run(['apt', 'install', '-y', 'make'], check=True, 
                         stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
            success("make ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        except subprocess.CalledProcessError as e:
            error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ make.")
            stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
            warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
            return False
    
    # Clone and build pre2k
    pre2k_dir = "/opt/pre2k"
    try:
        # Ensure /opt directory exists
        if not ensure_directory_exists('/opt'):
            error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑĞ¾Ğ·Ğ´Ğ°Ñ‚ÑŒ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ /opt")
            return False
        
        # Clone pre2k repository
        print("ĞšĞ»Ğ¾Ğ½Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ğµ Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸Ñ pre2k...")
        if os.path.exists(pre2k_dir):
            print("Ğ”Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ pre2k ÑƒĞ¶Ğµ ÑÑƒÑ‰ĞµÑÑ‚Ğ²ÑƒĞµÑ‚. ĞĞ±Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ...")
            try:
                subprocess.run(['git', 'pull'], cwd=pre2k_dir, check=True, 
                             stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
            except subprocess.CalledProcessError:
                print("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ğ¾Ğ±Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ. Ğ£Ğ´Ğ°Ğ»ÑĞµĞ¼ ÑÑ‚Ğ°Ñ€ÑƒÑ Ğ´Ğ¸Ñ€ĞµĞºÑ‚Ğ¾Ñ€Ğ¸Ñ Ğ¸ ĞºĞ»Ğ¾Ğ½Ğ¸Ñ€ÑƒĞµĞ¼ Ğ·Ğ°Ğ½Ğ¾Ğ²Ğ¾...")
                subprocess.run(['rm', '-rf', pre2k_dir], check=True)
                subprocess.run(['git', 'clone', 'https://github.com/OpenSecurityResearch/pre2k.git', pre2k_dir], 
                             check=True, stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
        else:
            # Try multiple repositories
            repositories = [
                'https://github.com/OpenSecurityResearch/pre2k.git',
                'https://github.com/garrettfoster13/pre2k.git',
                'https://github.com/ins1gn1a/pre2k.git'
            ]
            
            cloned = False
            for repo in repositories:
                try:
                    print(f"ĞŸĞ¾Ğ¿Ñ‹Ñ‚ĞºĞ° ĞºĞ»Ğ¾Ğ½Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ Ğ¸Ğ· {repo}...")
                    subprocess.run(['git', 'clone', repo, pre2k_dir], 
                                 check=True, stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
                    cloned = True
                    break
                except subprocess.CalledProcessError:
                    print(f"ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ĞºĞ»Ğ¾Ğ½Ğ¸Ñ€Ğ¾Ğ²Ğ°Ñ‚ÑŒ Ğ¸Ğ· {repo}")
                    continue
            
            if not cloned:
                error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ĞºĞ»Ğ¾Ğ½Ğ¸Ñ€Ğ¾Ğ²Ğ°Ñ‚ÑŒ pre2k Ğ½Ğ¸ Ğ¸Ğ· Ğ¾Ğ´Ğ½Ğ¾Ğ³Ğ¾ Ñ€ĞµĞ¿Ğ¾Ğ·Ğ¸Ñ‚Ğ¾Ñ€Ğ¸Ñ.")
                return False
        
        success("pre2k ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ĞºĞ»Ğ¾Ğ½Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½.")
        
        # Build pre2k
        print("Ğ¡Ğ±Ğ¾Ñ€ĞºĞ° pre2k...")
        subprocess.run(['make'], cwd=pre2k_dir, check=True, 
                     stdout=subprocess.DEVNULL, stderr=subprocess.PIPE)
        success("pre2k ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑĞ¾Ğ±Ñ€Ğ°Ğ½.")
        
        # Create symlink to /usr/local/bin
        subprocess.run(['ln', '-sf', f'{pre2k_dir}/pre2k', '/usr/local/bin/pre2k'], check=True)
        subprocess.run(['chmod', '+x', '/usr/local/bin/pre2k'], check=True)
        
        success("pre2k ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½!")
        success("Ğ—Ğ°Ğ¿ÑƒÑĞº: pre2k")
        
        return True
        
    except KeyboardInterrupt:
        print(f"\n{COLOR_YELLOW}Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° pre2k Ğ¿Ñ€ĞµÑ€Ğ²Ğ°Ğ½Ğ° Ğ¿Ğ¾Ğ»ÑŒĞ·Ğ¾Ğ²Ğ°Ñ‚ĞµĞ»ĞµĞ¼.{COLOR_RESET}")
        return False
    except subprocess.CalledProcessError as e:
        error("ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ pre2k.")
        stderr_out = e.stderr.decode('utf-8') if e.stderr else "Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸ Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ½Ñ‹."
        warning(f"Ğ”ĞµÑ‚Ğ°Ğ»Ğ¸ Ğ¾ÑˆĞ¸Ğ±ĞºĞ¸: {stderr_out}")
        return False
    except FileNotFoundError as e:
        error(f"Ğ¤Ğ°Ğ¹Ğ» Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½: {e}")
        return False
    except PermissionError as e:
        error(f"ĞÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ°Ğ² Ğ´Ğ¾ÑÑ‚ÑƒĞ¿Ğ°: {e}")
        return False
    except Exception as e:
        error(f"ĞĞµĞ¾Ğ¶Ğ¸Ğ´Ğ°Ğ½Ğ½Ğ°Ñ Ğ¾ÑˆĞ¸Ğ±ĞºĞ° Ğ¿Ñ€Ğ¸ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞµ pre2k: {e}")
        return False

def install_seclists_and_rockyou():
    """Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° seclists Ğ¸ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞ° rockyou"""
    print("Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ° seclists Ğ¸ Ğ½Ğ°ÑÑ‚Ñ€Ğ¾Ğ¹ĞºĞ° rockyou...")
    
    # Check current status
    seclists_installed = False
    rockyou_available = False
    
    # Check if seclists is already installed
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° ÑÑ‚Ğ°Ñ‚ÑƒÑĞ° seclists...")
    seclists_result = subprocess.run(['dpkg', '-s', 'seclists'], stdout=subprocess.PIPE, stderr=subprocess.PIPE)
    if seclists_result.returncode == 0:
        success("seclists ÑƒĞ¶Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½.")
        seclists_installed = True
    else:
        print("seclists Ğ½Ğµ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½. Ğ£ÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°...")
        if check_or_install_package('seclists', 'seclists'):
            seclists_installed = True
        else:
            error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ seclists.")
            return False
    
    # Check if rockyou is already available
    print("ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° ÑÑ‚Ğ°Ñ‚ÑƒÑĞ° rockyou...")
    rockyou_txt = "/usr/share/wordlists/rockyou.txt"
    if os.path.isfile(rockyou_txt):
        success("rockyou.txt ÑƒĞ¶Ğµ Ğ´Ğ¾ÑÑ‚ÑƒĞ¿ĞµĞ½.")
        rockyou_available = True
    else:
        print("rockyou.txt Ğ½Ğµ Ğ½Ğ°Ğ¹Ğ´ĞµĞ½. ĞŸĞ¾Ğ¿Ñ‹Ñ‚ĞºĞ° Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²ĞºĞ¸...")
        check_and_extract_rockyou()
        if os.path.isfile(rockyou_txt):
            rockyou_available = True
            success("rockyou.txt ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ğ½.")
        else:
            warning("rockyou.txt Ğ½Ğµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ñ€Ğ°ÑĞ¿Ğ°ĞºĞ¾Ğ²Ğ°Ñ‚ÑŒ. Ğ’Ğ¾Ğ·Ğ¼Ğ¾Ğ¶Ğ½Ğ¾, seclists Ğ½Ğµ ÑĞ¾Ğ´ĞµÑ€Ğ¶Ğ¸Ñ‚ rockyou.")
    
    # Summary
    if seclists_installed and rockyou_available:
        success("seclists Ğ¸ rockyou ÑƒÑĞ¿ĞµÑˆĞ½Ğ¾ Ğ½Ğ°ÑÑ‚Ñ€Ğ¾ĞµĞ½Ñ‹!")
        return True
    elif seclists_installed and not rockyou_available:
        warning("seclists ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½, Ğ½Ğ¾ rockyou.txt Ğ½ĞµĞ´Ğ¾ÑÑ‚ÑƒĞ¿ĞµĞ½.")
        warning("ĞŸĞ¾Ğ¿Ñ€Ğ¾Ğ±ÑƒĞ¹Ñ‚Ğµ Ğ¿ĞµÑ€ĞµÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ¸Ñ‚ÑŒ seclists Ğ¸Ğ»Ğ¸ ÑĞºĞ°Ñ‡Ğ°Ñ‚ÑŒ rockyou Ğ²Ñ€ÑƒÑ‡Ğ½ÑƒÑ.")
        return False
    else:
        error("ĞĞµ ÑƒĞ´Ğ°Ğ»Ğ¾ÑÑŒ Ğ½Ğ°ÑÑ‚Ñ€Ğ¾Ğ¸Ñ‚ÑŒ seclists Ğ¸ rockyou.")
        return False

