    print("5. hydra - Ğ±Ñ€ÑƒÑ‚Ñ„Ğ¾Ñ€Ñ-Ğ¸Ğ½ÑÑ‚Ñ€ÑƒĞ¼ĞµĞ½Ñ‚")
    print("6. â† ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ")
    while True:
        choice = input("Ğ’Ñ‹Ğ±ĞµÑ€Ğ¸Ñ‚Ğµ Ğ¸Ğ½ÑÑ‚Ñ€ÑƒĞ¼ĞµĞ½Ñ‚ (1-6): ").strip()
        if choice in ["1", "2", "3", "4", "5", "6"]:
            return choice
        else:
            warning("ĞĞµĞ²ĞµÑ€Ğ½Ñ‹Ğ¹ Ğ²Ñ‹Ğ±Ğ¾Ñ€! Ğ’Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ 1, 2, 3, 4, 5 Ğ¸Ğ»Ğ¸ 6.")

def main_menu():
    print_ascii_banner()
    print(f"{COLOR_YELLOW}Ğ“Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ:{COLOR_RESET}")
    print("1. ğŸ”§ Ğ¡Ğ¸ÑÑ‚ĞµĞ¼Ğ½Ñ‹Ğµ ÑƒÑ‚Ğ¸Ğ»Ğ¸Ñ‚Ñ‹")
    print("2. ğŸŒ Ğ’ĞµĞ±-Ğ±ĞµĞ·Ğ¾Ğ¿Ğ°ÑĞ½Ğ¾ÑÑ‚ÑŒ")
    print("3. ğŸ” Ğ’Ğ¾ÑÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ¿Ğ°Ñ€Ğ¾Ğ»ĞµĞ¹")
    print("4. ğŸ“š Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€Ğ¸ Ğ¸ Ğ±Ğ°Ğ·Ñ‹ Ğ´Ğ°Ğ½Ğ½Ñ‹Ñ…")
    print("5. ğŸ›  Ğ”Ğ¾Ğ¿Ğ¾Ğ»Ğ½Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ñ‹Ğµ Ğ¸Ğ½ÑÑ‚Ñ€ÑƒĞ¼ĞµĞ½Ñ‚Ñ‹")
    print("6. âŒ Ğ’Ñ‹Ğ¹Ñ‚Ğ¸")
    while True:
        choice = input("Ğ’Ñ‹Ğ±ĞµÑ€Ğ¸Ñ‚Ğµ ĞºĞ°Ñ‚ĞµĞ³Ğ¾Ñ€Ğ¸Ñ (1-6): ").strip()
        if choice in ["1", "2", "3", "4", "5", "6"]:
            return choice
        else:
            warning("ĞĞµĞ²ĞµÑ€Ğ½Ñ‹Ğ¹ Ğ²Ñ‹Ğ±Ğ¾Ñ€! Ğ’Ğ²ĞµĞ´Ğ¸Ñ‚Ğµ 1, 2, 3, 4, 5 Ğ¸Ğ»Ğ¸ 6.")

if __name__ == "__main__":
    # ĞŸÑ€Ğ¾Ğ²ĞµÑ€ĞºĞ° Ğ¾Ğ¿ĞµÑ€Ğ°Ñ†Ğ¸Ğ¾Ğ½Ğ½Ğ¾Ğ¹ ÑĞ¸ÑÑ‚ĞµĞ¼Ñ‹
    if not is_linux():
        error("Ğ­Ñ‚Ğ¾Ñ‚ ÑĞºÑ€Ğ¸Ğ¿Ñ‚ Ğ¿Ñ€ĞµĞ´Ğ½Ğ°Ğ·Ğ½Ğ°Ñ‡ĞµĞ½ Ğ´Ğ»Ñ Kali Linux.")
        error("Ğ—Ğ°Ğ¿ÑƒÑÑ‚Ğ¸Ñ‚Ğµ ĞµĞ³Ğ¾ Ğ² Linux-Ğ¾ĞºÑ€ÑƒĞ¶ĞµĞ½Ğ¸Ğ¸ (Ğ½Ğ°Ğ¿Ñ€Ğ¸Ğ¼ĞµÑ€, Ğ² Docker-ĞºĞ¾Ğ½Ñ‚ĞµĞ¹Ğ½ĞµÑ€Ğµ).")
        error("Ğ”Ğ»Ñ Ñ‚ĞµÑÑ‚Ğ¸Ñ€Ğ¾Ğ²Ğ°Ğ½Ğ¸Ñ Ğ² Windows Ğ¸ÑĞ¿Ğ¾Ğ»ÑŒĞ·ÑƒĞ¹Ñ‚Ğµ: docker run -it --rm -v ${PWD}:/workspace kalilinux/kali-rolling")
        sys.exit(1)
    
    if not is_root():
        error("Ğ¡ĞºÑ€Ğ¸Ğ¿Ñ‚ Ğ´Ğ¾Ğ»Ğ¶ĞµĞ½ Ğ±Ñ‹Ñ‚ÑŒ Ğ·Ğ°Ğ¿ÑƒÑ‰ĞµĞ½ Ğ¾Ñ‚ root. Ğ˜ÑĞ¿Ğ¾Ğ»ÑŒĞ·ÑƒĞ¹Ñ‚Ğµ: sudo python3 start_setting")
        sys.exit(1)

    # Ğ“Ğ»Ğ°Ğ²Ğ½Ñ‹Ğ¹ Ñ†Ğ¸ĞºĞ» Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹
    while True:
        main_choice = main_menu()
        
        if main_choice == "1":  # Ğ¡Ğ¸ÑÑ‚ĞµĞ¼Ğ½Ñ‹Ğµ ÑƒÑ‚Ğ¸Ğ»Ğ¸Ñ‚Ñ‹
            while True:
                sub_choice = system_utilities_menu()
                if sub_choice == "1":
                    system_update_only()
                elif sub_choice == "2":
                    # ĞŸĞ¾Ğ»Ğ½Ğ°Ñ ÑƒÑÑ‚Ğ°Ğ½Ğ¾Ğ²ĞºĞ°
                    apt_update_upgrade()
                    check_or_install_package('seclists', 'seclists')
                    check_and_extract_rockyou()
                    check_or_install_wpscan()
                    check_or_install_burpsuite()
                    check_or_install_pre2k()
                elif sub_choice == "3":
                    additional_packages_manual_menu()
                elif sub_choice == "4":
                    break  # ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
                
        elif main_choice == "2":  # Ğ’ĞµĞ±-Ğ±ĞµĞ·Ğ¾Ğ¿Ğ°ÑĞ½Ğ¾ÑÑ‚ÑŒ
            while True:
                sub_choice = web_security_menu()
                if sub_choice == "1":
                    check_or_install_burpsuite()
                elif sub_choice == "2":
                    check_or_install_wpscan()
                elif sub_choice == "3":
                    break  # ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
                    
        elif main_choice == "3":  # Ğ’Ğ¾ÑÑÑ‚Ğ°Ğ½Ğ¾Ğ²Ğ»ĞµĞ½Ğ¸Ğµ Ğ¿Ğ°Ñ€Ğ¾Ğ»ĞµĞ¹
            while True:
                sub_choice = password_recovery_menu()
                if sub_choice == "1":
                    check_or_install_pre2k()
                elif sub_choice == "2":
                    install_john()
                elif sub_choice == "3":
                    install_hashcat()
                elif sub_choice == "4":
                    break  # ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
                    
        elif main_choice == "4":  # Ğ¡Ğ»Ğ¾Ğ²Ğ°Ñ€Ğ¸ Ğ¸ Ğ±Ğ°Ğ·Ñ‹ Ğ´Ğ°Ğ½Ğ½Ñ‹Ñ…
            while True:
                sub_choice = dictionaries_menu()
                if sub_choice == "1":
                    check_or_install_package('seclists', 'seclists')
                elif sub_choice == "2":
                    check_and_extract_rockyou()
                elif sub_choice == "3":
                    install_seclists_and_rockyou()
                elif sub_choice == "4":
                    break  # ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
                    
        elif main_choice == "5":  # Ğ”Ğ¾Ğ¿Ğ¾Ğ»Ğ½Ğ¸Ñ‚ĞµĞ»ÑŒĞ½Ñ‹Ğµ Ğ¸Ğ½ÑÑ‚Ñ€ÑƒĞ¼ĞµĞ½Ñ‚Ñ‹
            while True:
                sub_choice = additional_tools_menu()
                if sub_choice == "1":
                    install_nmap()
                elif sub_choice == "2":
                    install_metasploit()
                elif sub_choice == "3":
                    install_nikto()
                elif sub_choice == "4":
                    install_gobuster()
                elif sub_choice == "5":
                    install_hydra()
                elif sub_choice == "6":
                    break  # ĞĞ°Ğ·Ğ°Ğ´ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
                    
        elif main_choice == "6":  # Ğ’Ñ‹Ñ…Ğ¾Ğ´
            print("Ğ’Ñ‹Ñ…Ğ¾Ğ´.")
            sys.exit(0)
        
        # ĞŸĞ¾ÑĞ»Ğµ Ğ²Ñ‹Ğ¿Ğ¾Ğ»Ğ½ĞµĞ½Ğ¸Ñ Ğ´ĞµĞ¹ÑÑ‚Ğ²Ğ¸Ñ Ğ²Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‰Ğ°ĞµĞ¼ÑÑ Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ
        print(f"\n{COLOR_YELLOW}ĞĞ°Ğ¶Ğ¼Ğ¸Ñ‚Ğµ Enter Ğ´Ğ»Ñ Ğ²Ğ¾Ğ·Ğ²Ñ€Ğ°Ñ‚Ğ° Ğ² Ğ³Ğ»Ğ°Ğ²Ğ½Ğ¾Ğµ Ğ¼ĞµĞ½Ñ...{COLOR_RESET}")
        try:
            input()
        except (EOFError, KeyboardInterrupt):
            print("\nĞ’Ñ‹Ñ…Ğ¾Ğ´ Ğ¸Ğ· Ğ¿Ñ€Ğ¾Ğ³Ñ€Ğ°Ğ¼Ğ¼Ñ‹.")
            sys.exit(0)
